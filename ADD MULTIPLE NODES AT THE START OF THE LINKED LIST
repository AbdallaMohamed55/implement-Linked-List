#include <iostream>
using namespace std;

struct Node {
    int data;        
    Node* next;      
};


void insertAtStart(Node*& head, int value) {
    Node* newNode = new Node;
    newNode->data = value;
    newNode->next = head;   
    head = newNode;        
}

void display(Node* head) {
    Node* temp = head;
    while (temp != nullptr) {
        cout << temp->data << " ";
        temp = temp->next;
    }
    cout << endl;
}

int main() {
    Node* head = nullptr; 

    insertAtStart(head, 10);
    insertAtStart(head, 20);
    insertAtStart(head, 30);
    insertAtStart(head, 40);

    cout << "LINKED LIST ELEMENTS: ";
    display(head);

    Node* temp = head;
    while (temp != nullptr) {
        Node* del = temp;
        temp = temp->next;
        delete del;
    }

    return 0;
}
